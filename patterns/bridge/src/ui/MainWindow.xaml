<Window x:Class="ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Canvas Name="without_cartesian" Width="250" Height="250"/>
        <Canvas Name="without_polar" Grid.Column="1" Width="250" Height="250" />
        <Canvas Name="with_cartesian" Grid.Row="1"  Width="250" Height="250"/>
        <Canvas Name="with_polar" Grid.Row="1" Grid.Column="1" Width="250" Height="250" />
    </Grid>
</Window>
